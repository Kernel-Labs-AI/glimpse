{
  "name": "playwright-pr-review",
  "version": "0.2.0",
  "description": "Upload Playwright screenshots to Supabase/S3 and post to GitHub PR comments",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "playwright-pr-review": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./playwright": {
      "import": "./dist/playwright/index.js",
      "types": "./dist/playwright/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "playwright test"
  },
  "keywords": [
    "playwright",
    "screenshots",
    "github",
    "pr",
    "pull-request",
    "visual-testing",
    "supabase",
    "s3"
  ],
  "author": "Alessio Fanelli",
  "homepage": "https://github.com/Kernel-Labs-AI/playwright-pr-review",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kernel-Labs-AI/playwright-pr-review.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@supabase/supabase-js": "^2.79.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.19.24",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": true
    }
  }
}
